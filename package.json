{
  "name": "corba.js",
  "version": "0.0.12",
  "description": "Object Request Broker (ORB) and Interface Definition Language (IDL) compiler",
  "author": "Mark-Andr√© Hopf <mhopf@mark13.org>",
  "license": "GPL-3.0",
  "main": "lib/orb/orb.js",
  "types": "lib/orb/orb.d.ts",
  "bin": {
    "corba-idl": "./bin/corba-idl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markandre13/corba.js.git"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:idl",
    "build:lib": "tsc",
    "build:idl": "rollup --config rollup.config.js",
    "test": "bin/corba-idl --ts-all test/*.idl && karma start",
    "test:watch": "bin/corba-idl --ts-all test/*.idl && karma start --singleRun=false --autoWatch=true | grep -v '^Chrome Headless .* LOG:'",
    "test:mico": "scp 192.168.1.105:mico-test/IOR.txt . && env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test-mico/giop.spec.ts'",
    "test:micoless": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test-mico/giop.spec.ts'",
    "update": "npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.3",
    "@types/ws": "^7.4.6",
    "bufferutil": "^4.0.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "karma": "^6.3.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.4.0",
    "karma-typescript": "^5.5.1",
    "mocha": "^9.0.2",
    "rollup": "^2.55.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "utf-8-validate": "^5.0.5"
  },
  "dependencies": {
    "ws": "^7.5.3"
  }
}
